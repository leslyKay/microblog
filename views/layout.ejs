<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html> 
  <head> 
    <title> Microblog</title> 
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' /> 
    <style type="text/css"> 
      body { 
        padding-top: 60px; 
        padding-bottom: 40px; 
      } 
    </style> 
    <link href="stylesheets/bootstrap-responsive.css" rel="stylesheet"> 
  </head> 
  <body> 

        <div class="navbar navbar-fixed-top">  
      <div class="navbar-inner"> 
        <div class="container"> 
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> 
            <span class="icon-bar"></span> 
            <span class="icon-bar"></span> 
            <span class="icon-bar"></span> 
          </a> 
          <a class="brand" href="/">Microblog</a> 
          <div class="nav-collapse"> 
            <ul class="nav"> 
              <li  <% if(index) {%>  class="active"  <%}%>><a href="/" >首页</a></li> 
              <% if(!user) { %> 
                  <li <% if(login) {%>  class="active"  <%}%>><a href="/login" >登录</a></li> 
                  <li  <% if(reg) {%>  class="active"  <%}%>><a href="/reg"> 注册</a></li> 
              <% }  else {%>
                     <li  ><a <%  if(user) { %> href="/u/<%=user.name %>" <% }%> 
                      >个人中心</a></li>
                   <li   <% if(logout) {%> class="active" <%}%>><a href="/logout">登出</a></li>
                   
              <% }%>
            </ul> 
            <% if(user) {%> 

                    <ul class="nav  navbar-nav navbar-right" >
                          <li> <a href="/u/<%=user.name %>"  class="link last">welcome,<%=user.name %></a> </li>
                    </ul>

             <%}%>
          </div> 
        </div> 
      </div> 
    </div> 

  <div id="container" class="container"> 
    
      <% if( success ) { %>
                <div id="alt_success" class="alert alert-success">
                 <%= success %>
                </div>
        <% } %>
        
        <% if( error ) { %>
                <div id="alt_error" class="alert alert-error">
                <%= error %>
                </div>
        <% } %>

    <%- body %> 

 <hr /> 
      <footer> 
        <p><a href="http://www.byvoid.com/" target="_blank">lesly_kay</a> 2014</p> 
      </footer> 
    </div> 
  </body> 
  <script src="/javascripts/jquery-1.8.3.min.js"></script> 
  <script src="/javascripts/bootstrap.js"></script> 
</html> 
